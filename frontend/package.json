{
  "name": "mkvmender-frontend",
  "version": "1.0.0",
  "description": "MKV Mender Web Frontend",
  "main": "server.js",
  "scripts": {
    "build:css": "npx @tailwindcss/cli -i ./public/css/input.css -o ./public/css/output.css --minify",
    "watch:css": "npx @tailwindcss/cli -i ./public/css/input.css -o ./public/css/output.css --watch",
    "start": "node server.js",
    "dev": "npm run watch:css & node server.js"
  },
  "keywords": [
    "mkvmender",
    "frontend"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14"
  }
}
